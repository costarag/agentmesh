{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "prisma/**/*.ts",
      "package.json",
      "tsconfig.json",
      "next.config.ts",
      "biome.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}
